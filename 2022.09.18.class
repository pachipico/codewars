// You must implement a function that returns the difference between the largest and the smallest value in a given list / array (lst) received as the parameter.

// lst contains integers, that means it may contain some negative numbers
// if lst is empty or contains a single element, return 0
// lst is not sorted
// [1, 2, 3, 4]   //  returns 3 because 4 -   1  == 3
// [1, 2, 3, -4]  //  returns 7 because 3 - (-4) == 7

// 내 답안
import java.util.Arrays;

public class Kata {

    public static int maxDiff(int[] lst) {
        int max = Arrays.stream(lst).max().orElse(0);
        int min = Arrays.stream(lst).min().orElse(0);
        return min < 0 ? max + Math.abs(min) : max - min;
    }
}

// 모범답안
import static java.util.Arrays.stream;

public class Kata {
  public static int maxDiff(final int[] lst) {
    return stream(lst).max().orElse(0) - stream(lst).min().orElse(0);
  }